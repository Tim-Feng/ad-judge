<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
    <title>Ad Judge</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>

    <script src="http://cdn.embed.ly/jquery.embedly-3.0.5.min.js" type="text/javascript"></script>
    <script src="http://cdn.embed.ly/jquery.preview-0.3.2.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://cdn.embed.ly/jquery.preview-0.3.2.css" />

  </head>
  <body>
    <header>
      <div class="navbar navbar-fixed-top navbar-inverse center">
        <div class="navbar-inner">
          <div class="container">
            <%= render 'layouts/navigation' %>
          </div>
        </div>
      </div>
    </header>
    <div id="main" role="main">
      <div class="container center">
         <div class="row center">
          <div class="span12 center">
            <%= render 'layouts/messages' %>
            <%= yield %>
          </div>
        </div>
        <footer>
        </footer>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <script>
      // Set up preview.
      $('#url').preview({key: '<%= MySettings.embedly_key %>'})

      // On submit add hidden inputs to the form.
      $('form').on('submit', function(){
        $(this).addInputs($('#url').data('preview'));
        return true;
      });
    </script>
  </body>
</html>
