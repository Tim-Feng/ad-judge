<div class='well span6 center'> 
<%= render 'shared/content_title', title: '登入, 分享你的品味' %>
  <div>
    <%= link_to image_tag("login_with_facebook.png", alt: "Facebook Login", size: "226x31"), "/auth/facebook" %>
  </div>
  <br>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :user_name %>
      <%= text_field_tag :user_name %>
    </div>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag '登入', class: 'btn btn-success' %>
    <%= link_to '尚未註冊?', register_path %>
  <% end %>
</div>