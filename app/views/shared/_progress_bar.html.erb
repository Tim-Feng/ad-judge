<% if post.up_ratio >= post.down_ratio %>
  <p>
    <%= raw number_to_percentage(post.up_ratio, precision: 0) %>的人喜歡這支廣告
  </p>
<% elsif post.up_ratio < post.down_ratio %>
  <p>
    <%= raw number_to_percentage(post.down_ratio, precision: 0) %>的人討厭這支廣告
  </p>
<% else %>
  <p>
    還沒有人投票
  </p>
<% end %>
<div class="progress span4 center">
  <div class="bar bar-success" style= "width: <%=raw number_to_percentage(post.up_ratio, precision: 0) %>%;"></div>
  <div class="bar bar-danger" style= "width: <%=raw number_to_percentage(post.down_ratio, precision: 0) %>%;" ></div>
</div>