<% if logged_in? %>
  <div class="social_share_column">
    <div class="social_share_button">
      <%= link_to image_tag("facebook_share.jpg", alt: "login", size: "116x37"), 
        'https://www.facebook.com/dialog/feed?
        app_id='+ ENV['FACEBOOK_KEY'] +
        '&link=http://www.ad-judge.com/posts/'+ post.slug +
        '&picture=http://img.youtube.com/vi/'+ post.youtube_video_id +
        '/hqdefault.jpg
        &name='+ post.title +
        '&redirect_uri=' + request.original_url,
        :target => :blank %>
    </div>
  </div>
<% else %>
  <div class="social_share_column">
    <div class="social_share_button">
      <%= link_to image_tag("facebook_share.jpg", alt: "login", size: "116x37"), login_path %>
    </div> 
  </div>
<% end %>