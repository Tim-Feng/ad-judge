<% if logged_in? %>
  <div class="social_share_column">
    <%= link_to image_tag("facebook_share.png", alt: "login", size: "93x32"),
        'https://www.facebook.com/dialog/feed?
        app_id=' + ENV['FACEBOOK_KEY'] +
        '&display=popup&link=http://www.ad-judge.com/posts/'+ post.slug +
        '&picture=http://img.youtube.com/vi/'+ post.youtube_video_id +
        '/hqdefault.jpg&name='+ post.title +
        '&redirect_uri='+ request.original_url,
        :target => :blank %> 
  </div>
<% else %>
  <div class="social_share_column">
    <%= link_to image_tag("facebook_share.png", alt: "login", size: "93x32"), login_path %>
  </div>
<% end %>