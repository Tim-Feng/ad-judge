<% if params[:tab] == 'ups' %>
  $("#main_items").append($("<%= j(render @post_vote_true) %>"));
  $(".pagination").html("<%= j(paginate @post_vote_true, :remote => true) %>");
<% elsif params[:tab] == 'downs' %>
  $("#main_items").append($("<%= j(render @post_vote_false) %>"));
  $(".pagination").html("<%= j(paginate @post_vote_false, :remote => true) %>");
<% end %>

